.item
    width 100%
    max-width 30em
    min-width 5em
    min-height 3em
    display inline-block
    vertical-align top

    .tag
        position absolute
        font bold .85em/2.25em $root-font
        color _dark-gray
        padding 0 .5em
        top 0
        left 0

.item.youtube_like
    .tag
        background-color _youtube-red

    img
        cursor pointer

.item.plus_post
    .tag
        background-color _plus-green

    p
        color _white
        background rgba(0, 0, 0, .8)
        position absolute
        padding .35em
        bottom 0
        left 0
        width 100%
        transform transalte(0, 100%)
        transition translate 1s ease-in

    & p
        transform transalte(0, 0)

    a
        color _green

.item.twitter_tweet
    .tag
        background-color _twitter-blue
    
    .inner
        padding-top 2.5em
        
.item.soundcloud_favorite
    width em(402)
    margin 1.5em 1em
    border-radius .25em
    border 1px solid _dark-gray
    overflow hidden
    cursor pointer
    background _white

    .tag
        background-color _soundcloud-orange

    h3
        padding .5em
        font-size 1.25em

    .music-row
        height em(80)
        width 100%
        
    .artwork
        width em(80)
        float left

    .waveform
        width em(400 - 80)
        height 100%
        float right
        position relative

        *
            position absolute
            top 0
            left 0
            width 100%
            height 100%

    .cover
        z-index 1

    .background-color
        background _soundcloud-orange
        z-index 0
        

.item.facebook_public
    .tag
        background-color facebook-dark-blue